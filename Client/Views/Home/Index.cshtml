@{
    ViewData["Title"] = "Home";
}

<style>
    .image-container {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
    }

    img {
        max-width: 80%;
        max-height: 80%;
        opacity: 1;
        transition: opacity 1s ease; /* Smooth transition for fade-out */
    }

    .fade-out {
        opacity: 0;
    }

    .log-container {
        width: 100%;
        height: 300px; /* Set height as needed */
        overflow-y: auto; /* Enable vertical scrolling */
        border: 1px solid #ccc; /* Optional border */
        padding: 10px; /* Optional padding */
        background-color: #f9f9f9; /* Optional background color */
        font-family: monospace; /* Optional monospace font for logs */
    }
</style>

<button id="send" type="button" class="btn btn-primary">Send</button>
<button id="stop" type="button" class="btn btn-primary">Stop</button>

<hr>

<div class="container">
    <div class="row">
        <!-- Segment 1 -->
        <div class="col-lg-4 col-md-12 segment segment-1">
            <div class="image-container">
                <img id="center-image" src="">
            </div>
        </div>
      

        <!-- Segment 2 -->
        <div class="col-lg-4 col-md-12 segment segment-2">
            <div id="eventList" class="log-container"></div>
        </div>

        <!-- Segment 3 -->
        <div class="col-lg-4 col-md-12 segment segment-3">
            <div id="messageList" class="log-container"></div>

        </div>
    </div>
</div>

@section Scripts
{
    <!-- <snippet_CDN> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <!-- </snippet_CDN> -->
    <script src="~/chat.js"></script>
}